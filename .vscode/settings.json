{
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "[vue]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode" // ← ИЗМЕНИТЕ на это
  },
  "prettier.semi": false,
  "javascript.format.semicolons": "ignore",
  "typescript.format.semicolons": "ignore",
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "vue"
  ],
  "vue3snippets.enable-compile-vue-file-on-did-save-code": false // ← ОТКЛЮЧИТЕ это
}
